{
  "manifest_version": 3,
  "name": "n8n Workflow Sidebar",
  "version": "1.0.4",
  "description": "Quick workflow navigation for n8n. Displays all workflows in the left sidebar for easy switching.",

  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webNavigation"
  ],

  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],

  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*/workflow/*",
        "http://*/workflow/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
